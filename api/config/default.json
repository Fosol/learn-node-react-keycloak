{
  "express": {
    "port": 3000
  },
  "logging": {
    "loglevel": "info",
    "morgan": {
      "format": "tiny"
    }
  },
  "keycloak": {
    "realm": "demo",
    "auth-server-url": "http://localhost:8080/auth",
    "ssl-required": "none",
    "resource": "demo-api",
